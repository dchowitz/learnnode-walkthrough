extends layout

block content
  .inner
    h2= title
    table.table
      thead
        td photo
        td ranking
        td name
        td reviews
        td Average Rating
      each store, i in stores
        tr
          td
            a(href=`/stores/${store.slug}`)
              img(width=200 src=`/uploads/${store.photo || 'store.png'}` alt=store.name)
          td= i+1
          td: a(href=`/stores/${store.slug}`)= store.name
          td= store.reviewCount
          td #{Math.round(store.reviewAvg * 10) / 10} / 5